```elixir
defmodule Transpose do
  def transpose([]), do: []
  def transpose([[] | _]), do: []

  def transpose(a) do
    [Enum.map(a, &hd/1) | transpose(Enum.map(a, &tl/1))]
  end
end
```

```elixir
test_input = "
    [D]    
[N] [C]    
[Z] [M] [P]
 1   2   3 

move 1 from 2 to 1
move 3 from 1 to 3
move 2 from 2 to 1
move 1 from 1 to 2
"

[stacks, procedure] =
  test_input
  |> String.split("\n\n", trim: true)
  |> Enum.map(fn x -> String.split(x, "\n", trim: true) end)

processed_stacks =
  stacks
  |> Enum.map(fn x ->
    x
    |> String.codepoints()
    |> Enum.chunk_every(4)
    |> Enum.map(fn x ->
      {r, _} = List.pop_at(x, 1)
      r
    end)
  end)
  |> Transpose.transpose()
  |> Enum.map(fn x -> Enum.reject(x, fn x -> x == " " end) end)

processed_procedure =
  procedure
  |> Enum.map(fn x -> String.split(x, " ") end)
  |> Enum.map(fn x -> Enum.drop_every(x, 2) end)

p1 =
  processed_procedure
  |> Enum.map(fn [m, f, t] ->
    Enum.map(1..m, fn ->
      {x, tail} = List.pop_at(processed_stacks, f - 1)
    end)
  end)

input = Api.get_input(4)

p1 =
  input
  |> String.split("\n", trim: true)
  |> Enum.map(fn pair -> String.split(pair, ",") end)
  |> Enum.map(fn [d1, d2] ->
    [x1, x2] = String.split(d1, "-") |> Enum.map(&String.to_integer(&1))
    [y1, y2] = String.split(d2, "-") |> Enum.map(&String.to_integer(&1))

